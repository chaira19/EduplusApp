<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/v1"
                android:background="@drawable/bg_home"/>

            <ImageView
                android:id="@+id/view_back"
                android:layout_width="match_parent"
                android:layout_below="@+id/v1"
                android:layout_height="wrap_content"
                android:layout_marginTop="-120dp"
                android:src="@drawable/ic_wave2"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:navigationIcon="@drawable/menu_button_of_three_horizontal_lines">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC Learning App"
                    android:textFontWeight="900"
                    android:layout_marginLeft="70dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title" />

            </androidx.appcompat.widget.Toolbar>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_below="@+id/toolbar"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="45dp"
                android:textColor="#FFFFFF"
                android:text="XYZ!"
                android:textSize="30sp"
                app:fontFamily="@font/baloo"
                android:layout_below="@+id/toolbar" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="135dp"
                android:text="Class X, ABC Public School"
                android:layout_below="@+id/textView"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="180dp"
                android:elevation="10dp"
                app:srcCompat="@drawable/ic_increase"
                android:layout_below="@+id/toolbar"/>

            <TextView
                android:layout_width="300dp"
                android:id="@+id/th"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="245dp"
                android:text="This Month's Content"
                android:layout_below="@+id/toolbar"
                android:textColor="#000000"
                android:textSize="25sp"
                app:fontFamily="@font/baloo"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card1"
                android:layout_below="@+id/th"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#F8F8F8">


                    <ImageView
                        android:id="@+id/p"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/html_coding2" />


                    <TextView
                        android:textSize="28dp"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:textColor="#000000"
                        android:id="@+id/topic"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="Programming"></TextView>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/np"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="310dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/week"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/ic_right_arrow_black"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card2"
                android:layout_below="@+id/card1"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#F8F8F8">


                    <ImageView
                        android:id="@+id/p1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/skill_icon2" />


                    <TextView
                        android:textSize="25dp"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:textColor="#000000"
                        android:id="@+id/topic1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="Skill Development"></TextView>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/ns"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="310dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/week"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/ic_right_arrow_black"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card3"
                android:layout_below="@+id/card2"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#F8F8F8">


                    <ImageView
                        android:id="@+id/p2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        app:srcCompat="@drawable/career_icon2" />


                    <TextView
                        android:textSize="24dp"
                        android:layout_marginLeft="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:textColor="#000000"
                        android:id="@+id/topic2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="Career Awareness"></TextView>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/nc"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="310dp"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/week"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/ic_right_arrow_black"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="300dp"
                android:id="@+id/th1"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Dashboard Highlights"
                android:layout_below="@+id/card3"
                android:textColor="#000000"
                android:textSize="25sp"
                app:fontFamily="@font/baloo"/>


        </RelativeLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>